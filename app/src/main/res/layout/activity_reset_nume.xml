<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetNume"
    android:orientation="vertical"
    android:background="@color/movdeschis">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schimbare nume utilizator"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/mov"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/edit_text_schimba_nume"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nume nou utilizator "
        android:textColor="@color/mov"
        android:layout_marginHorizontal="12dp"
        android:paddingStart="10dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/buton_schimba_nume"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="Salvează modificări"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@color/mov" />
</LinearLayout>
