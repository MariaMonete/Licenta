<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetEmail"
    android:orientation="vertical"
    android:background="@color/movdeschis">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schimbare email"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/mov"
        android:layout_marginTop="50dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        android:layout_marginTop="60dp">
        <EditText
            android:id="@+id/edit_text_current_password"
            android:layout_width="match_parent"
            android:hint="Parola curentă"
            android:inputType="textPassword"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginHorizontal="12dp"
            android:ems="10"
            android:paddingStart="10dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:textColor="@color/mov"/>
    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/edit_text_schimba_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:hint="Email nou"
        android:textColor="@color/mov"
        android:layout_marginHorizontal="12dp"
        android:paddingStart="10dp"
        android:background="@color/white" />

    <Button
        android:id="@+id/buton_schimba_email"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="Salvează modificări"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:background="@color/mov" />
</LinearLayout>
